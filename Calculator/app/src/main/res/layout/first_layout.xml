<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#be0e0a"
        android:text ="计算器"/>
    <EditText
    android:id="@+id/edit_show"
    android:layout_width="match_parent"
    android:layout_height="40dip"
    android:enabled="false"
    android:gravity="right"/>
    <EditText
        android:id="@+id/edit_show1"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:enabled="false"
        android:gravity="right"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp">

        <Button
            android:id="@+id/but2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="C"
            android:textColor="#0000CD"/>
        <Button
            android:id="@+id/but3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="DEL"
            android:textColor="#0000CD"/>
        <Button
            android:id="@+id/but20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="="
            android:textColor="#0000CD"/>
        <Button
            android:id="@+id/but4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="/"
            android:textColor="#0000CD"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/but9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="4"
            android:textColor="#0000CD" />

        <Button
            android:id="@+id/but10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="5"
            android:textColor="#0000CD" />

        <Button
            android:id="@+id/but11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="6"
            android:textColor="#0000CD" />

        <Button
            android:id="@+id/but12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="-"
            android:textColor="#0000CD" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">
        <Button
            android:id="@+id/but5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="7"
            android:textColor="#0000CD"/>
        <Button
            android:id="@+id/but6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="8"
            android:textColor="#0000CD"/>
        <Button
            android:id="@+id/but7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="9"
            android:textColor="#0000CD"/>
        <Button
            android:id="@+id/but8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="×"
            android:textColor="#0000CD"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">
        <Button
            android:id="@+id/but13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="1"
            android:textColor="#0000CD"/>
        <Button
            android:id="@+id/but14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="2"
            android:textColor="#0000CD"/>
        <Button
            android:id="@+id/but15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="3"
            android:textColor="#0000CD"/>
        <Button
            android:id="@+id/but16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="+"
            android:textColor="#0000CD"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">
        <Button
            android:id="@+id/but18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="0"
            android:textColor="#0000CD"/>
        <Button
            android:id="@+id/but19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145b7d"
            android:text="."
            android:textColor="#0000CD"/>
    </LinearLayout>

</LinearLayout>
